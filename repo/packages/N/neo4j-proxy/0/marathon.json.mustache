{  
  "id":"/neo4j/proxy",
  "cpus":1,
  "mem":1024,
  "instances":1,
  "container":{  
    "type":"DOCKER",
    "docker":{
      "image":"{{resource.assets.container.docker.dcos-neo4j}}",
      "forcePullImage":true,
      "network":"BRIDGE",
      "portMappings":[  
        {  
          "hostPort":7474,
          "containerPort":7474,
          "protocol":"tcp"
        }
      ]
    }
  },
  "env":{  
    "DCOS_NEO4J_USER":"{{neo4j-proxy.auth-username}}",
    "DCOS_NEO4J_PASS":"{{neo4j-proxy.auth-password}}"
  },
  "healthChecks":[
    {
      "protocol":"HTTP",
      "path":"/",
      "port":7474,
      "timeoutSeconds":10,
      "gracePeriodSeconds":240,
      "intervalSeconds":10,
      "maxConsecutiveFailures":10
    }
  ],
  "acceptedResourceRoles":[  
    "slave_public"
  ]
}
