{
  "id":"{{service.name}}",
  "cpus":1,
  "mem":1024,
  "instances":1,
  "container":{
    "type":"DOCKER",
    "docker":{
      "image":"{{resource.assets.container.docker.dcos-neo4j}}",
      "forcePullImage":true,
      "network":"BRIDGE",
      "portMappings":[
        {
          "hostPort":7474,
          "containerPort":7474,
          "protocol":"tcp"
        }
      ]
    }
  },
  "env":{
    "DCOS_NEO4J_USER":"{{neo4j-proxy.auth-username}}",
    "DCOS_NEO4J_PASS":"{{neo4j-proxy.auth-password}}"
  },
  "labels": {
     "DCOS_SERVICE_NAME": "{{service.name}}",
     "DCOS_SERVICE_SCHEME": "http",
     "DCOS_SERVICE_PORT_INDEX": "0"
  },
  "healthChecks":[
    {
      "protocol":"HTTP",
      "path":"/",
      "port":7474,
      "timeoutSeconds":10,
      "gracePeriodSeconds":240,
      "intervalSeconds":10,
      "maxConsecutiveFailures":10
    }
  ],
  {{#neo4j-proxy.constraints}}
  "constraints": [
    {{#.}}
      [
        "{{attribute}}"
       ,"{{operator}}"
       {{#value}},"{{value}}"{{/value}}
      ]{{^last}},{{/last}}
    {{/.}}
  ],
  {{/neo4j-proxy.constraints}}
  "acceptedResourceRoles":[
    "slave_public"
  ]
}
