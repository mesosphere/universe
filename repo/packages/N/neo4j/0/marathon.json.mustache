{  
  "id":"neo4j/core",
  "cpus":{{neo4j-core.cpus}},
  "mem":{{neo4j-core.mem}},
  "instances":{{neo4j-core.instances}},
  "disk": {{neo4j-core.disk}},
  "container":{  
    "type":"DOCKER",
    "volumes":[  
      {  
        "containerPath":"data",
        "mode":"RW",
        "persistent":{  
          "type":"root",
          "size":{{neo4j-core.disk}}
        }
      },
      {  
        "containerPath":"/data",
        "hostPath":"data",
        "mode":"RW"
      }
    ],
    "docker":{  
      "image":"{{resource.assets.container.docker.dcos-neo4j}}",
      "network":"USER"
    }
  },
  "env":{  
    "NEO4J_AUTH":"{{neo4j-core.auth-username}}/{{neo4j-core.auth-password}}",
    "NEO4J_dbms_mode":"CORE",
    "NEO4J_causalClustering_expectedCoreClusterSize":"{{neo4j-core.expected-cluster-size}}"
  },
  "ipAddress":{  
    "networkName":"{{neo4j-core.network-name}}"
  },
  "healthChecks":[
    {
      "protocol":"HTTP",
      "path":"/",
      "port":7474,
      "timeoutSeconds":10,
      "gracePeriodSeconds":240,
      "intervalSeconds":10,
      "maxConsecutiveFailures":10
    }
  ]
}