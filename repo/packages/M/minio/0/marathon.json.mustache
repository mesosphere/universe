{
    "id": "{{service.name}}",
    "cpus": {{minio.cpus}},
    "mem": {{minio.mem}},
    "instances": 1,
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "{{resource.assets.container.docker.minio-docker}}",
            "forcePullImage": false,
            "network": "BRIDGE",
            "portMappings": [
               { "containerPort": 80, "hostPort": 0 }
           ]
        },
        "volumes": [
            {
                "containerPath": "/mnt/export/minio1:/export",
                "hostPath": "{{storage.host-volume}}",
                "mode": "RW"
            },
            {
              "containerPath": "/mnt/config/minio1:/root/.minio",
              "hostPath": "{{storage.config}}",
              "mode": "RW"
            }
        ]
    },
    "healthChecks": [
        {
            "protocol": "HTTP",
            "path": "/",
            "portIndex": 0,

            "gracePeriodSeconds": 300,
            "intervalSeconds": 60,
            "timeoutSeconds": 20,
            "maxConsecutiveFailures": 3
        }
    ],
    "labels": {
        "DCOS_SERVICE_NAME": "{{service.name}}",
        "DCOS_SERVICE_SCHEME": "http",
        "DCOS_SERVICE_PORT_INDEX": "0",
        "DCOS_PACKAGE_NAME": "{{minio.name}}",
        "DCOS_PACKAGE_VERSION": "0.0.1",
        "DCOS_PACKAGE_IS_FRAMEWORK": "false",
        {{#networking.virtual-host}}
        "HAPROXY_GROUP":"external",
        "HAPROXY_0_VHOST":"{{networking.virtual-host}}",
        "HAPROXY_0_REDIRECT_TO_HTTPS": "{{networking.https-redirect}}",
        {{/networking.virtual-host}}
        "DCOS_PACKAGE_FRAMEWORK_NAME": "{{minio.name}}"
    }
}
