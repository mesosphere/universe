{
    "$schema": "http://json-schema.org/schema#",
    "properties": {
        "service":{
            "type":"object",
            "description": "Minio DC/OS service properties",
            "properties":{
                "name" : {
                    "description":"The name of the Minio instance",
                    "type":"string",
                    "default":"minio"
                }
            }
        },
        "minio":{
            "type": "object",
            "description": "Minio service configuration properties",
            "properties": {
                "name": {
                    "description": "Package name",
                    "type": "string",
                    "default": "minio"
                },
                "cpus": {
                    "description": "CPU shares to allocate to each Minio node",
                    "type": "number",
                    "default": 0.2,
                    "minimum": 0.2
                },
                "mem": {
                    "description": "Memory to allocate to each Minio node",
                    "type": "number",
                    "default": 256.0,
                    "minimum": 256.0
                },
                "region": {
                    "default": "us-east-1",
                    "description": "The account region where Minio data is located",
                    "type": "string",
                    "pattern": "^[a-z0-9-]{5,25}$"
                },
                "access_key": {
                    "description": "Access key with permissions to log into Minio Server",
                    "type": "string"
                },
                "secret_key": {
                    "description": "Secret access key with permissions to log into Minio Server",
                    "type": "string"
                }
            },
            "required": [
                "name",
                "cpus",
                "mem",
                "region",
                "access_key",
                "secret_key"
            ]
        },
        "storage":{
          "type": "object",
          "description": "Storage configuration for Minio's application and config on DC/OS",
          "properties": {
            "host-volume": {
                "description": "The location of a volume on the host to be used for persisting Minio files.",
                "type": "string",
                "default": "/mnt/export/minio1:/export"
            },
            "config": {
                "description": "The location of config",
                "type": "string",
                "default": "/mnt/config/minio1:/root/.minio"
            }
          },
          "required": [
              "host-volume",
              "config"
          ]
        },
        "networking": {
          "description": "Networking-related configuration properties for Minio on DC/OS.",
          "type": "object",
          "properties": {
            "virtual-host": {
              "description": "The virtual host address to configure for integration with Marathon-lb.",
              "type": "string"
            },
            "https-redirect": {
              "description": "Whether Marathon-lb should redirect HTTP traffic to HTTPS. This requires 'virtual-host' to be set. By default, this is false.",
              "type": "boolean",
              "default": false
            }
          }
        }
    }
}
