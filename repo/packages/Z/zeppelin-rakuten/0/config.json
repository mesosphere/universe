{
  "$schema": "http://json-schema.org/schema#",
  "properties": {
    "zeppelin": {
      "properties": {
        "cpus": {
          "default": 1,
          "description": "CPU shares to allocate to each zeppelin instance.",
          "minimum": 1,
          "type": "number"
        },
        "mem": {
          "default": 4096.0,
          "description": "Memory (MB) to allocate to each marathon task.",
          "minimum": 2048.0,
          "type": "number"
        },
        "name": {
          "default": "zeppelin",
          "description": "Name for this LB instance",
          "type": "string"
        },
        "role": {
          "default": "",
          "description": "Deploy zeppelin only on nodes with this role.",
          "type": "string"
        },
        "user": {
          "default": "qiang",
          "description": "Deploy zeppelin with this use.",
          "type": "string"
        },
        "master": {
          "default": "mesos://zk://zk-1.zk:2181/mesos",
          "description": "Deploy zeppelin with this mesos master.",
          "type": "string"
        },
        "slave_cores": {
          "default": 8,
          "description": "Deploy zeppelin with this slave core number.",
          "minimum": 1,
          "type": "integer"
        },
        "spark_image": {
          "default": "localhost:5000/dess/dev/spark-mesos-r:2.1.1",
          "description": "Deploy zeppelin with this spark image.",
          "type": "string"
        }
      },
      "required": ["cpus", "mem", "name"],
      "type": "object"
    }
  },
  "type": "object"
}
