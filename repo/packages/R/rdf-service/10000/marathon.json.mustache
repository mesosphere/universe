{
  "id": "{{service.name}}",
  "cpus": {{service.cpus}},
  "mem": {{service.mem}},
  "labels": {
    "DCOS_SERVICE_NAME": "{{service.name}}",
    "DCOS_SERVICE_SCHEME": "http",
    "DCOS_SERVICE_PORT_INDEX": "0"
  },
  "container": {
    "portMappings": [
      {
        "containerPort": {{service.container_port}},
        "hostPort": 0,
        "labels": {
            "VIP_0": "/{{service.name}}:5000"
        },
        "protocol": "tcp"
      }
    ],
    "type": "DOCKER",
    "volumes": [],
    "docker": {
      "image": "{{resource.assets.container.docker.rdf-service}}",
      "forcePullImage": true,
      "privileged": false,
      "parameters": []
    }
  },
  "networks": [
    {
      "mode": "container/bridge"
    }
  ],
  "env": {
    "HTTP_HOSTNAME": "{{service.env.HTTP_HOSTNAME}}",
    "HTTP_PORT": "{{service.env.HTTP_PORT}}",
    "SERVICE_PREFIX": "{{service.env.SERVICE_PREFIX}}",
    "USERNAME": "{{service.env.USERNAME}}",
    "PASSWORD": "{{service.env.PASSWORD}}",
    "ENDPOINT": "{{service.env.ENDPOINT}}"
  },
  "labels": {
      "DCOS_SERVICE_NAME": "{{service.name}}",
      "DCOS_SERVICE_PORT_INDEX": "0",
      "DCOS_SERVICE_SCHEME": "http"
  },
  "healthChecks": [
    {
      "protocol": "HTTP",
      "portIndex": 0,
      "path": "{{service.health_url}}",
      "gracePeriodSeconds": 120,
      "intervalSeconds": 30,
      "maxConsecutiveFailures": 3,
      "timeoutSeconds": 5
    }
  ]
}

