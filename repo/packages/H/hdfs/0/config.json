{
  "type": "object",
  "properties": {
    "hdfs": {
      "type": "object",
      "properties": {
      "custom-config": {
        "description": "Custom mesos-site.xml (base64 encoded)",
        "type": "string"
      },
      "framework-name": {
        "description": "The name of the framework. Until this is configurable, please do not change this from it's default value.",
        "type": "string",
        "default": "hdfs"
      },
      "framework-version": {
        "description": "Framework version",
        "type": "string",
        "default": "hdfs-mesos-0.1.5"
      },
      "cpus": {
        "default": 0.5,
        "description": "CPU shares to allocate to each Marathon instance.",
        "minimum": 0.0,
        "type": "number"
      },
      "mem": {
        "default": 512.0,
        "description": "Memory (MB) to allocate to each Marathon task.",
        "minimum": 512.0,
        "type": "number"
      },
      "instances": {
        "default": 1,
        "description": "Number of Marathon instances to run.",
        "minimum": 0,
        "type": "integer"
      },
      "disk-size": {
        "default": 100,
        "description": "Number of Marathon instances to run.",
        "minimum": 0,
        "type": "integer"
      },
    	"role": {
      	"description": "Framework role",
      	"type": "string",
      	"default": "*"
      },
      "jre-version": {
        "description": "JRE version",
        "type": "string",
        "default": "jre1.7.0_76"
      },
      "ld-library-path": {
        "desription": "Library path",
        "type": "string",
        "default": "/opt/mesosphere/lib"
      }
     },
     "required": [
       "framework-name",
       "ld-library-path",
       "jre-version",
       "framework-version",
       "cpus",
       "mem",
       "instances",
       "disk-size"
     ]
    }
  }
}
