{
    "id": "{{vamp.vamp-id}}",
    "instances": 1,
    "cpus": {{vamp.cpu}},
    "mem": {{vamp.memory}},
    "container": {
        "type": "DOCKER",
        "docker": {
        "image": "{{resource.assets.container.docker.vamp}}",
        "network": "HOST",
        "forcePullImage": {{vamp.force-pull-image}}
        }
    },
    "env": {
        "VAMP_REST_API_PORT": "{{vamp.rest-api-port}}",
        "VAMP_PERSISTENCE_KEY_VALUE_STORE_ZOOKEEPER_SERVERS": "{{vamp.zookeeper-servers}}",
        "VAMP_CONTAINER_DRIVER_MESOS_URL": "{{vamp.mesos-url}}",
        "VAMP_CONTAINER_DRIVER_MARATHON_URL": "{{vamp.marathon-url}}",
        "VAMP_GATEWAY_DRIVER_LOGSTASH_HOST": "{{vamp.logstash}}",
        "VAMP_PULSE_ELASTICSEARCH_URL": "{{vamp.elasticsearch-url}}",
        "VAMP_LIFTER_VAMP_GATEWAY_AGENT_ID": "{{vamp.vamp-gateway-agent-id}}",
        "VAMP_LIFTER_VAMP_GATEWAY_AGENT_ENABLED": "{{vamp.vga-deployment}}"
    }
}
