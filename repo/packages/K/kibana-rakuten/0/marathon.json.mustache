{
  "id": "{{kibana-rakuten.framework-name}}",
  "cpus": {{kibana-rakuten.cpu}},
  "mem": {{kibana-rakuten.mem}},
  "instances": {{kibana-rakuten.instances}},
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{resource.assets.container.docker.kibana-rakuten}}",
      "network": "HOST",
      "forcePullImage": {{kibana-rakuten.force-pull-image}}
    }
  },
  "healthChecks": [
    {
      "gracePeriodSeconds": 120,
      "intervalSeconds": 30,
      "maxConsecutiveFailures": 0,
      "path": "/",
      "portIndex": 0,
      "protocol": "HTTP",
      "timeoutSeconds": 5
    }
  ],
  "args": [
    {{#kibana-rakuten.verbose}}"--verbose",{{/kibana-rakuten.verbose}}
    "-e", "{{kibana-rakuten.elasticsearch-url}}",
    "-p", "{{kibana-rakuten.port}}"
  ],
  {{#kibana.config-uri}}
  "env": {
    "CONFIG_PATH": "/mnt/mesos/sandbox/config.yml"
  },
  "fetch": [
    { "uri": "{{kibana-rakuten.config-uri}}" }
  ],
  {{/kibana-rakuten.config-uri}}
  "ports": [{{kibana-rakuten.port}}],
  "requirePorts": true,
  "labels": {
    "DCOS_SERVICE_NAME":"{{kibana-rakuten.framework-name}}",
    "DCOS_SERVICE_SCHEME":"http",
    "DCOS_SERVICE_PORT_INDEX":"0"
  }
}
