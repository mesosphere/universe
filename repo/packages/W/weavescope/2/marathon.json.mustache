{
  "id": "{{service.name}}",
  "cpus": {{weavescope.app.cpus}},
  "mem": {{weavescope.app.mem}},
  "instances": {{weavescope.app.instances}},
  "constraints": [
    [
      "hostname",
      "UNIQUE"
    ]
  ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{resource.assets.container.docker.image}}",
      "forcePullImage": false
    }
  },
  "args": [
    "--no-probe"
  ],
  "ports": [
    4040
  ],
  "healthChecks": [
    {
      "protocol": "HTTP",
      "path": "/api",
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "port": 4040,
      "ignoreHttp1xx": false
    }
  ],
  "dependencies": [
    "/weavescope-probe"
  ],
  "requirePorts": true,
  "labels": {
    "DCOS_SERVICE_NAME": "{{service.name}}",
    "DCOS_SERVICE_SCHEME": "http",
    "DCOS_SERVICE_PORT_INDEX": "0"
  }
}
