{
  "id": "/spark-notebook",
  "cpus": 0.5,
  "mem": 4000,
  "instances": 1,
  "cmd": "JAVA_HOME=$MESOS_SANDBOX/jre1.7.0_76 && cd $SPARK_NOTEBOOK_DIR && ./bin/spark-notebook -v -Dmanager.tachyon.enabled=false -Dhttp.port=$PORT0 -J-Xms4000m -J-Xmx4000m -Dmanager.notebooks.custom.sparkConf.spark.mesos.executor.docker.image=\"mesosphere/spark:v1.5.0-hdfs\" -Dmanager.notebooks.custom.sparkConf.spark.master=\"mesos://zk://master.mesos:2181\" -Dmanager.notebooks.custom.sparkConf.spark.mesos.executor.home=\"/opt/spark/dist\"",
  "uris": [
    "{{resource.assets.uris.spark-notebook-0-6-2-scala-2-10-4-spark-1-5-0-hadoop-2-5-0-tgz}}",
    "{{resource.assets.uris.jre-7u76-linux-x64-tar-gz}}"
  ],
  "env": {
   "MESOS_JAVA_NATIVE_LIBRARY": "/opt/mesosphere/lib/libmesos.so",
   "SPARK_NOTEBOOK_DIR": "spark-notebook-0.6.2-scala-2.10.4-spark-1.5.0-hadoop-2.5.0-cdh5.3.3-with-hive-with-parquet"
  },
  "acceptedResourceRoles": ["slave_public"],
  "healthChecks": [
    {
      "protocol": "HTTP",
      "portIndex": 0,
      "path": "/",
      "gracePeriodSeconds": 5,
      "intervalSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ],
  "ports": [ 0 ]
}

