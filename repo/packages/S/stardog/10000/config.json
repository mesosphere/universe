{
  "type": "object",
  "properties": {
    "service": {
      "type": "object",
      "description": "DC/OS Stardog service specifications",
      "properties": {
        "name": {
          "default": "stardog",
          "type": "string",
          "description": "Name of Stardog instace as seen in DCOS."
        },
        "cpus": {
          "description": "Number of logical cores to allocate to each service instance.",
          "type": "number",
          "default": 4
        },
        "disk": {
          "description": "Disk",
          "type": "number",
          "default": 450000
        },
        "mem": {
          "description":  "Memory in Mb to allocate to each service instance.",
          "type": "number",
          "default": 12288
        },
        "hostname": {
          "description": "Address of the host to be deployed on",
          "type": "string",
          "default": "10.32.16.44"
        }
      }
    },
    "stardog": {
      "type": "object",
      "description": "Stardog specifications",
      "properties": {
        "jvm_heap_size": {
          "type": "number",
          "default": 4,
          "description": "JVM memory (GB)"
        },
        "jvm_off_heap_size": {
          "type": "number",
          "default": 6,
          "description": "JVM off-heap memory (GB)"
        },
        "graph_data_volume": {
          "type": "object",
          "description": "Data to add to Stardog",
          "properties": {
            "container_path": {
              "description": "Container path",
              "type": "string",
              "default": "/mnt/graph_data"
            },
            "host_path": {
              "description": "Host path",
              "type": "string",
              "default": "/mnt/azurefileshare/hdfs/raw/thomsonreuters/poc-load"
            }
          }
        },
        "backup_volume": {
          "type": "object",
          "description": "Stardog backup volume config",
          "properties": {
            "container_path": {
              "description": "Container path",
              "type": "string",
              "default": "/var/opt/Backups"
            },
            "host_path": {
              "description": "Host path",
              "type": "string",
              "default": "/mnt/azurefileshare/data/stardog/backups"
            }
          }
        },
        "data_volume": {
          "type": "object",
          "description": "Stardog data volume config",
          "properties": {
            "container_path": {
              "description": "Container path",
              "type": "string",
              "default": "/stardog"
            },
            "host_path": {
              "description": "Host path",
              "type": "string",
              "default": "/var/lib/mesos/Stardog"
            }
          }
        }
      }
    },
    "marathon-lb" : {
      "type": "object",
      "description": "Marathon-lb ports config",
      "properties": {
        "vhost": {
          "description":  "Virtual host.",
          "type": "string",
          "default": "dcos-leo-public.eastus.cloudapp.azure.com"
        },
        "port0": {
          "description": "UI",
          "type": "number",
          "default": 10200
        }
      }
    }
  }
}
