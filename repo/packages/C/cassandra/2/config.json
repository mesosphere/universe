        "writeRequestTimeoutInMs": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/application/writeRequestTimeoutInMs",
          "type": "integer",
          "default": 2000
        },
        "counterWriteRequestTimeoutInMs": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/application/counterWriteRequestTimeoutInMs",
          "type": "integer",
          "default": 5000
        },
        "casContentionTimeoutInMs": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/application/casContentionTimeoutInMs",
          "type": "integer",
          "default": 1000
        },
        "truncateRequestTimeoutInMs": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/application/truncateRequestTimeoutInMs",
          "type": "integer",
          "default": 60000
        },
        "requestTimeoutInMs": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/application/requestTimeoutInMs",
          "type": "integer",
          "default": 10000
