          "id": "http://cassandra/docs/mesosphere.com/cassandra/application/batchlogReplayThrottleInKb",
          "type": "integer",
          "default": 1024
        },
        "partitioner": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/application/partitioner",
          "type": "string",
          "default": "org.apache.cassandra.dht.Murmur3Partitioner"
