        "crossNodeTimeout": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/application/crossNodeTimeout",
          "type": "boolean",
          "default": false
        },
        "endpointSnitch": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/application/endpointSnitch",
          "type": "string",
          "default": "SimpleSnitch"
