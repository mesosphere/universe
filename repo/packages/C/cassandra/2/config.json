        "heap": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/heap",
          "type": "object",
          "properties": {
            "sizeMb": {
              "id": "http://cassandra/docs/mesosphere.com/cassandra/heap/sizeMb",
              "type": "integer",
              "default": 2048
            },
            "newMb": {
              "id": "http://cassandra/docs/mesosphere.com/cassandra/heap/newMb",
              "type": "integer",
              "default": 100
            }
          },
          "additionalProperties": false
        },
        "jmxPort": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/jmxPort",
          "type": "integer",
          "default": 7199
