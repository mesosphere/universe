    "executor": {
      "id": "http://cassandra/docs/mesosphere.com/executor",
      "type": "object",
      "properties": {
        "command": {
          "id": "http://cassandra/docs/mesosphere.com/executor/command",
          "type": "string",
          "default": "./executor/bin/cassandra-executor server executor/conf/executor.yml"
        },
        "cpus": {
          "id": "http://cassandra/docs/mesosphere.com/executor/cpus",
          "type": "number",
          "default": 0.5
        },
        "memoryMb": {
          "id": "http://cassandra/docs/mesosphere.com/executor/memoryMb",
          "type": "integer",
          "default": 768
        },
        "diskMb": {
          "id": "http://cassandra/docs/mesosphere.com/executor/diskMb",
          "type": "integer",
          "default": 1024
        },
        "heapMb": {
          "id": "http://cassandra/docs/mesosphere.com/executor/heapMb",
          "type": "integer",
          "default": 512
        },
        "apiPort": {
          "id": "http://cassandra/docs/mesosphere.com/executor/apiPort",
          "type": "integer",
          "default": 9000
        },
        "adminPort": {
          "id": "http://cassandra/docs/mesosphere.com/executor/adminPort",
          "type": "integer",
          "default": 9001
        },
        "javaHome": {
          "id": "http://cassandra/docs/mesosphere.com/executor/javaHome",
          "type": "string",
          "default": "./jre"
        },
        "jreLocation": {
          "id": "http://cassandra/docs/mesosphere.com/executor/jreLocation",
          "type": "string",
          "default": "https://s3-us-west-2.amazonaws.com/cassandra-framework-dev/jre/linux/server-jre-8u74-linux-x64.tar.gz"
        },
        "executorLocation": {
          "id": "http://cassandra/docs/mesosphere.com/executor/executorLocation",
          "type": "string",
          "default": "https://s3-us-west-2.amazonaws.com/cassandra-framework-dev/ken/executor.zip"
        },
        "cassandraLocation": {
          "id": "http://cassandra/docs/mesosphere.com/executor/cassandraLocation",
          "type": "string",
          "default": "https://s3-us-west-2.amazonaws.com/cassandra-framework-dev/testing/apache-cassandra-2.2.5-bin.tar.gz"
        }
      },
      "additionalProperties": false
    },
    "nodes": {
      "id": "http://cassandra/docs/mesosphere.com/servers",
      "type": "integer",
      "default": 3
    },
    "seedNodes": {
      "id": "http://cassandra/docs/mesosphere.com/seeds",
      "type": "integer",
      "default": 2
    },
    "updateConfig": {
      "id": "http://cassandra/docs/mesosphere.com/updateConfig",
      "type": "boolean",
      "default": false
    },
    "placementStrategy": {
      "id": "http://cassandra/docs/mesosphere.com/placementStrategy",
      "type": "string",
      "default": "NODE"
    },
    "planStrategy": {
      "id": "http://cassandra/docs/mesosphere.com/planStrategy",
      "type": "string",
      "default": "INSTALL"
    },
    "apiPort": {
      "id": "http://cassandra/docs/mesosphere.com/apiPort",
      "type": "integer",
      "default": 9000
    },
    "adminPort": {
      "id": "http://cassandra/docs/mesosphere.com/adminPort",
      "type": "integer",
      "default": 9001
    }
  },
  "additionalProperties": false,
  "required": [
    "framework",
    "cassandra",
    "executor",
    "nodes",
    "seedNodes",
    "updateConfig",
    "placementStrategy",
    "planStrategy",
    "apiPort",
    "adminPort"
  ]
}
