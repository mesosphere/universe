          "id": "http://cassandra/docs/mesosphere.com/cassandra/application/batchSizeFailThresholdInKb",
          "type": "integer",
          "default": 50
        },
        "compactionThroughputMbPerSec": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/application/compactionThroughputMbPerSec",
          "type": "integer",
          "default": 16
        },
        "compactionLargePartitionWarningThresholdMb": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/application/compactionLargePartitionWarningThresholdMb",
          "type": "integer",
          "default": 100
