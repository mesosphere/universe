        "dynamicSnitchBadnessThreshold": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/application/dynamicSnitchBadnessThreshold",
          "type": "number",
          "default": 0.1
        },
        "requestScheduler": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/application/requestScheduler",
          "type": "string",
          "default": "org.apache.cassandra.scheduler.NoScheduler"
        },
        "internodeCompression": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/application/internodeCompression",
          "type": "string",
          "default": "all"
        },
        "interDcTcpNodelay": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/application/interDcTcpNodelay",
          "type": "boolean",
          "default": false
        },
        "tracetypeQueryTtl": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/application/tracetypeQueryTtl",
          "type": "integer",
          "default": 86400
        },
        "tracetypeRepairTtl": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/application/tracetypeRepairTtl",
          "type": "integer",
          "default": 604800
        },
        "enableUserDefinedFunctions": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/application/enableUserDefinedFunctions",
          "type": "boolean",
          "default": false
        },
        "windowsTimerInterval": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/application/windowsTimerInterval",
          "type": "integer",
          "default": 1
        }
