{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://cassandra/docs/mesosphere.com",
  "type": "object",
  "properties": {
    "framework": {
      "id": "http://cassandra/docs/mesosphere.com/framework",
      "type": "object",
      "properties": {
        "memoryMb": {
          "id": "http://cassandra/docs/mesosphere.com/framework/memoryMb",
          "type": "integer",
          "default": 2048
        },
        "cpus": {
          "id": "http://cassandra/docs/mesosphere.com/framework/cpus",
          "type": "number",
          "default": 0.5
        },
        "name": {
          "id": "http://cassandra/docs/mesosphere.com/framework/name",
          "type": "string",
          "default": "cassandra"
        },
        "version": {
          "id": "http://cassandra/docs/mesosphere.com/framework/version",
          "type": "string",
          "default": "0.1.0"
        }
      },
      "additionalProperties": false,
      "required": [
        "memoryMb",
        "cpus",
        "name",
        "version"
      ]
    },
