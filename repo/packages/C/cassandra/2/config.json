        "dynamicSnitchUpdateIntervalInMs": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/application/dynamicSnitchUpdateIntervalInMs",
          "type": "integer",
          "default": 100
        },
        "dynamicSnitchResetIntervalInMs": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/application/dynamicSnitchResetIntervalInMs",
          "type": "integer",
          "default": 600000
