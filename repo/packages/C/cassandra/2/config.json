      "id": "http://cassandra/docs/mesosphere.com/cassandra",
      "type": "object",
      "properties": {
        "version": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/version",
          "type": "string",
          "default": "2.2.5"
        },
        "cpus": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/cpus",
          "type": "number",
          "default": 0.5
        },
        "memoryMb": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/memoryMb",
          "type": "integer",
          "default": 4096
        },
        "diskMb": {
          "id": "http://cassandra/docs/mesosphere.com/cassandra/diskMb",
          "type": "integer",
          "default": 10240
