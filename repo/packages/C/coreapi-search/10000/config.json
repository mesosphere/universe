{
  "type": "object",
  "properties": {
    "service": {
      "type": "object",
      "description": "DC/OS coreapi-search service specifications",
      "properties": {
        "name": {
          "description": "Name of CoreApiSearch instances as seen in DC/OS.",
          "type": "string",
          "default": "coreapi-search"
        },
        "cpus": {
          "description": "Number of logical cores to allocate to each service instance.",
          "type": "number",
          "default": 0.2
        },
        "mem": {
          "description":  "Memory in Mb to allocate to each service instance.",
          "type": "number",
          "default": 256
        },
        "health_url": {
          "description": "Url for health checks",
          "type": "string",
          "default": "/health"
        },
        "container_port": {
          "description": "Container port",
          "type": "number",
          "default": 80
        },
        "env" : {
          "type": "object",
          "description": "environment variables",
          "properties": {
            "HTTP_HOSTNAME" : {
              "description": "Hostname",
              "type": "string",
              "default": "0.0.0.0"
            },
            "HTTP_PORT" : {
              "description": "HTTP_PORT",
              "type": "string",
              "default": "80"
            },
            "SERVICE_PREFIX" : {
              "description": "service prefix url",
              "type": "string",
              "default": "/service/coreapi-search"
            },
            "CUSTOM_SEARCH_ID" : {
              "description": "custom search id",
              "type": "string",
              "default": ""
            },
            "API_KEY" : {
              "description": "search api key",
              "type": "string",
              "default": ""
            },
            "SEARCH_LIMIT" : {
              "description": "max search results per query (1-10)",
              "type": "string",
              "default": "10"
            },
            "SEARCH_LANGUAGE" : {
              "description": "search language",
              "type": "string",
              "default": "lang_en"
            },
            "SEARCH_QUERY_KEYWORDS" : {
              "description": "search keyword to get more precise results",
              "type": "string",
              "default": ""
            },
            "USE_SEARCH_DATE_PARAM" : {
              "description": "search date range",
              "type": "string",
              "default": "true"
            }
          }
        }
      }
    }
  }
}