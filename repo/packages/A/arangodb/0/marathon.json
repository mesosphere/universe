{
  "id": "{{arangodb/id}}",
  "cpus": 0.2,
  "mem": 64.0,
  "ports": [ {{arangodb/framework-port}} ],
  "instances": 1,

  "args": [
    "framework",
    "--framework_name={{arangodb/id}}",
    "--master={{mesos/master}}",
    "--zk={{arangodb/zk}}/{{arangodb/id}}",
    "--volume_path={{arangodb/volume-path}}",
    "--role=*"
  ],

  "env": {
    "ARANGODB_WEBUI_HOST": "{{arangodb/webui-host}}",
    "ARANGODB_WEBUI_PORT": "{{arangodb/framework-port}}"
  },

  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "arangodb/arangodb-mesos",
      "forcePullImage": true,
      "network": "HOST"
    }
  },

  "healthChecks": [
    {
      "protocol": "HTTP",
      "path": "/v1/health.json",
      "gracePeriodSeconds": 3,
      "intervalSeconds": 10,
      "portIndex": 0,
      "timeoutSeconds": 10,
      "maxConsecutiveFailures": 0
    }
  ]
}
