{
  "id": "{{portworx.framework-name}}",
  "cpus": {{portworx.cpus}},
  "mem": {{portworx.mem}},
  "instances": {{portworx.instances}},
  "constraints": [
        ["hostname", "UNIQUE"]
  ],
  "container": {
        "type": "DOCKER",
        "docker": {
            "image": "{{resource.assets.container.docker.portworx-docker}}",
            "forcePullImage": true,
            "network": "HOST",
            "privileged": true,
            "parameters": [
			{
			    "key": "volume",
			    "value": "/run/docker/plugins:/run/docker/plugins"
			},
			{
			    "key": "volume",
			    "value": "/etc/pwx:/etc/pwx"
			},
			{
			    "key": "volume",
			    "value": "/var/lib/osd:/var/lib/osd:shared"
			},
			{
			    "key": "volume",
			    "value": "/dev:/dev"
			},
			{
			    "key": "volume",
			    "value": "/opt/pwx/bin:/export_bin"
			},
			{
			    "key": "volume",
			    "value": "/var/run/docker.sock:/var/run/docker.sock"
			},
			{
			    "key": "volume",
			    "value": "/var/cores:/var/cores"
			},
			{
			    "key": "volume",
			    "value": "{{portworx.headers_dir}}:{{portworx.headers_dir}}"
			}
	      ]
	}
    },
    "args": [
        "--name pxcluster.mesos",
        "{{portworx.cmdargs}}"
    ],
    "healthChecks": [
    {
        "protocol": "HTTP",
        "port": {{portworx.api_port}},
        "path": "/status",
        "gracePeriodSeconds": 300,
        "intervalSeconds": 60,
        "timeoutSeconds": 20,
        "maxConsecutiveFailures": 3
    }]
}
