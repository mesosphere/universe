{
  "id": "{{service.name}}",
  "cpus": {{postgresql.cpus}},
  "mem": {{postgresql.mem}},
  "instances": 1,
  "env": {
    "POSTGRES_PASSWORD": "{{postgresql.password}}",
    "POSTGRES_USER": "{{postgresql.user}}",
    "POSTGRES_PGDATA": "{{storage.pgdata}}",
    "POSTGRES_DB": "{{postgresql.dbname}}",
    "POSTGRES_INITDB_ARGS": "{{postgresql.initdbargs}}"
  },
  "container": {
    "type": "DOCKER",
    "volumes": [{
      "containerPath": "{{storage.pgdata}}",
      {{^storage.persistence}}
      "hostPath": "{{storage.host_volume}}/{{storage.pgdata}}",
      {{/storage.persistence}}
      {{#storage.persistence}}
      "persistent": {
        "size": {{storage.volume_size}}
      },
      {{/storage.persistence}}
      "mode": "RW"
    }],
    "docker": {
      "image": "{{resource.assets.container.docker.postgresql-docker}}",
      "forcePullImage": false,
      "network": "BRIDGE",
      "portMappings": [{
          "containerPort": 5432,
          "hostPort": 0,
          {{#networking.create_vip}}
          "servicePort": {{networking.port_vip}},
          {{/networking.create_vip}}
          "protocol": "tcp",
          "name": "{{service.name}}",
          "labels": {
            "VIP_0": "/{{service.name}}:{{networking.port}}"
          }
      }]
    }      
  },
  "healthChecks": [{
      "protocol": "TCP",
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "portIndex": 0
  }],

  "labels": {
    "DCOS_SERVICE_NAME": "{{service.name}}",
    {{#networking.create_vip}}
    "HAPROXY_0_VHOST": "{{networking.virtual_host}}",
    "HAPROXY_GROUP": "external",
    {{/networking.create_vip}}
    "DCOS_PACKAGE_VERSION": "0.1",
    "DCOS_PACKAGE_IS_FRAMEWORK": "false"
  }
}
