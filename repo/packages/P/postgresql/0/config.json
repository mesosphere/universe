{
    "$schema": "http://json-schema.org/schema#",
    "properties": {
        "service":{
            "type":"object",
            "description": "DC/OS service configuration properties",
            "properties":{
                "name" : {
                    "description":"The name of the PostgreSQL service instance",
                    "type":"string",
                    "default":"postgresql"
                }
            }
        },
        "postgresql":{
            "type": "object",
            "description": "PostgreSQL service configuration properties",
            "properties": {
                "name": {
                    "description": "Package name.",
                    "type": "string",
                    "default": "postgresql"
                },
                "cpus": {
                    "description": "CPU shares to allocate to each PostgreSQL node.",
                    "type": "number",
                    "default": 0.3,
                    "minimum": 0.3
                },
                "mem": {
                    "description": "Memory to allocate to each PostgreSQL node.",
                    "type": "number",
                    "default": 256.0,
                    "minimum": 256.0
                },
                "user": {
                    "description": "Postgres user.",
                    "type": "string",
                    "default": "admin"
                },
                "password": {
                    "description": "Postgres password.",
                    "type": "string",
                    "default": "password"
                },
                "dbname": {
                    "description": "Name for the default database that is created when the image is first started.",
                    "type": "string",
                    "default": "admin"
                },
                "initdbargs": {
                    "description": "Arguments to send to postgres initdb. The value is a space separated string of arguments as postgres initdb would expect them.",
                    "type": "string"
                }
            },
            "required": [
                "name",
                "cpus",
                "mem"
            ]
        },
        "storage": {
            "type": "object",
            "description": "PostgreSQL storage configuration properties",
            "properties":{    
                "persistence": {
                    "description": "Enable or disable data persistence. If enabled, requires configuration of a valid host_volume.",
                    "type": "boolean",
                    "default": false                    
                },
                "host_volume": {
                    "description": "The location of a volume on the host to be used for persisting PostgreSQL data. The final location will be derived from this value plus the name set in `name` (e.g. `/mnt/host_volume/postgresql`). This can be a mounted NFS drive. Note that this path must be the same on all DCOS agents.",
                    "type": "string",
                    "default": "/tmp"
                },
                "volume_size": {
                    "description": "If a new volume is to be created, this controls its size in MBs. Defaults to 64MBs",
                    "type": "number",
                    "default": 64
                },
                "pgdata": {
                    "description": "Location of the database files.",
                    "type": "string",
                    "default": "pgdata"
                }
            }
        },
        "networking": {
            "type": "object",
            "description": "PostgreSQL networking configuration properties",
            "properties": {    
                "virtual_host": {
                    "description": "Virtual Host URL to be used in the external load balancer. Modify as per your installation.",
                    "type": "string",
                    "default": "postgresql.example.org"
                },
                "port": {
                    "description": "Port number to be used for clear communication",
                    "type": "number",
                    "default": 5432
                },
                "port_external": {
                    "description": "Port number to be used for clear communication in the external load balancer",
                    "type": "number",
                    "default": 15432
                }
            }
        }
    }
}
