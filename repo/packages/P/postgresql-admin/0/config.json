{
    "$schema": "http://json-schema.org/schema#",
    "properties": {
        "service":{
            "type":"object",
            "description": "DC/OS service configuration properties",
            "properties":{
                "name" : {
                    "description":"The name of the postgresql Admin service instance",
                    "type":"string",
                    "default":"postgresql-admin"
                }
            }
        },
        "postgresql-admin":{
            "type": "object",
            "description": "postgresql admin service configuration properties",
            "properties": {
                "name": {
                    "description": "Package name.",
                    "type": "string",
                    "default": "postgresql-admin"
                },
                "cpus": {
                    "description": "CPU shares to allocate to each postgresql node.",
                    "type": "number",
                    "default": 0.2,
                    "minimum": 0.2
                },
                "mem": {
                    "description": "Memory to allocate to each postgresql node.",
                    "type": "number",
                    "default": 256.0,
                    "minimum": 256.0
                },
                "defaultdb": {
                    "description": "Default database. Defaults to 'admin'.",
                    "type": "string",
                    "default": "admin"
                }
            },
            "required": [
                "cpus",
                "mem"
            ]
        },
        "networking":{
            "type": "object",
            "description": "PostgreSQL admin networking configuration properties",
            "properties": {
                "postgres_host":{
                    "description": "The name of the postgresql instance to connect to.",
                    "type": "string",
                    "default": "postgresql"
                },
                "postgres_host_port":{
                    "description": "The port where the postgresql server is listening on. Defaults to 5432",
                    "type": "number",
                    "default": 5432
                },
                "external_access": {
                    "description": "Enable or disable creating a VIP for external access through a public node running Marathon-LB. Defaults to FALSE. Please note that this connection would be UNENCRYPTED.",
                    "type": "boolean",
                    "default": false                    
                }, 
                "port_external": {
                    "description": "For external access, port number to be used for clear communication in the external load balancer",
                    "type": "number",
                    "default": 15433
                },
                "virtual_host": {
                    "description": "For external access, Virtual Host URL to be used in the external load balancer. Modify as per your installation.",
                    "type": "string",
                    "default": "postgresql.example.org"
                }
            }
        }
    }
}
