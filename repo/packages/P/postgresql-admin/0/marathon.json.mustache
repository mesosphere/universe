{
    "id": "{{service.name}}",
    "cpus": {{postgresql-admin.cpus}},
    "mem": {{postgresql-admin.mem}},
    "instances": 1,
    "env": {
        "DB_HOST": "{{networking.postgres_host}}.marathon.l4lb.thisdcos.directory",
        "DB_PORT": "{{networking.postgres_host_port}}"
    },
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "{{resource.assets.container.docker.postgresql-admin-docker}}",
            "forcePullImage": false,
            "network": "BRIDGE",
            "portMappings": [
            {
                "containerPort": 80,
                "hostPort": 0,
                {{#networking.external_access}}
                "servicePort": {{networking.port_external}},
                {{/networking.external_access}}
                "protocol": "tcp"
            }
            ]
        }
    },
    "healthChecks": [
        {
            "protocol": "HTTP",
            "path": "/",
            "portIndex": 0,

            "gracePeriodSeconds": 300,
            "intervalSeconds": 60,
            "timeoutSeconds": 20,
            "maxConsecutiveFailures": 3
        }
    ],
    "labels": {
        "DCOS_SERVICE_NAME": "{{service.name}}",
        "DCOS_SERVICE_SCHEME": "http",
        "DCOS_SERVICE_PORT_INDEX": "0",
        "DCOS_PACKAGE_NAME": "{{postgresql-admin.name}}",
        "DCOS_PACKAGE_VERSION": "0.1",
        "DCOS_PACKAGE_IS_FRAMEWORK": "false",
        {{#networking.external_access}}
        "HAPROXY_GROUP": "external",
        "HAPROXY_0_VHOST": "{{networking.virtual_host}}",
        {{/networking.external_access}}        
        "DCOS_PACKAGE_FRAMEWORK_NAME": "{{postgresql-admin.name}}"
    }
}
