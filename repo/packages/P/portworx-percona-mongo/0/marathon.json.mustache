    "MONGODB_NET_SSL_PEM_KEY_FILE": "mongodb_{{service.name}}_{{mongodb.replicaSetName}}.pem",
    "MONGODB_NET_SSL_CA_FILE": "mongodb_{{service.name}}_{{mongodb.replicaSetName}}.ca",
    {{/mongodb-ssl.name}}
