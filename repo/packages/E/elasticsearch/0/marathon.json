{
  "id": "{{elasticsearch.framework-name}}",
  "cpus": 0.1,
  "mem": {{elasticsearch.scheduler.ram}},
  "ports": [0],
  "instances": {{elasticsearch.scheduler.instances}},
  "healthChecks": [
    {
      "gracePeriodSeconds": 120,
      "intervalSeconds": 30,
      "maxConsecutiveFailures": 0,
      "path": "/",
      "portIndex": 0,
      "protocol": "HTTP",
      "timeoutSeconds": 5
    }
  ],
  "args": ["--zookeeperMesosUrl", "{{mesos.master}}"],
  "env": {
    "JAVA_OPTS": "-Xms128m -Xmx256m"
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "mesos/elasticsearch-scheduler",
      "network": "HOST",
      "forcePullImage": {{elasticsearch.forcePullImage}}
    }
  },
  "ports": [{{elasticsearch.port}}],
  "requirePorts": true
}
