{
  "id": "{{service.name}}",
  "cpus": {{openldap.cpus}},
  "mem": {{openldap.mem}},
  "instances": 1,
  "env": {
    "SLAPD_PASSWORD": "{{openldap.admin_password}}",
    "SLAPD_DOMAIN": "{{openldap.domain}}",
    "SLAPD_ORGANIZATION": "{{openldap.organization}}",
    "SLAPD_CONFIG_PASSWORD": "{{openldap.config_password}}",
    "SLAPD_ADDITIONAL_SCHEMAS": "{{openldap.additional_schemas}}",
    "SLAPD_ADDITIONAL_MODULES": "{{openldap.additional_modules}}",
    "SLAPD_FORCE_RECONFIGURE": "{{openldap.force_reconfigure}}"
  },
  "container": {
    "type": "DOCKER",
    "volumes": [
      {
        "containerPath": "/var/lib/ldap",
        {{^storage.persistence}}
        "hostPath": "{{storage.host_volume}}/{{openldap.name}}/ldap",
        {{/storage.persistence}}
        {{#storage.persistence}}
        "persistent": {
          "size": {{storage.ldap_volume_size}}
        },
        {{/storage.persistence}}
        "mode": "RW"
      },
      {
        "containerPath": "/etc/ldap/slapd.d",
        {{^storage.persistence}}
        "hostPath": "{{storage.host_volume}}/{{openldap.name}}/slapd.d",
        {{/storage.persistence}}
        {{#storage.persistence}}
        "persistent": {
          "size": {{storage.slapd_volume_size}}
        },
        {{/storage.persistence}}
        "mode": "RW"
      }
    ],
    "docker": {
      "image": "{{resource.assets.container.docker.openldap-docker}}",
      "forcePullImage": false,
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 389,
          "hostPort": 0,
          {{#networking.external_access}}
          "servicePort": {{networking.port_external}},
          {{/networking.external_access}}
          "protocol": "tcp",
          "name": "{{service.name}}",
          "labels": {
            "VIP_0": "/{{service.name}}:{{networking.port}}"
          }
        }
      ]
    }
  },
  "healthChecks": [
    {
      "protocol": "TCP",
      "portIndex": 0,
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 10,
      "maxConsecutiveFailures": 3
    }
  ],
  "constraints": [
    [
      "hostname",
      "UNIQUE"
    ]
  ],
  "labels": {
    "DCOS_SERVICE_NAME": "{{service.name}}",
    {{#networking.external_access}}
    "HAPROXY_0_VHOST": "{{openldap.virtual_host}}",
    "HAPROXY_GROUP": "external",
    {{/networking.external_access}}
    "DCOS_PACKAGE_NAME": "{{openldap.name}}",
    "DCOS_PACKAGE_VERSION": "0.3",
    "DCOS_PACKAGE_IS_FRAMEWORK": "false",
    "DCOS_PACKAGE_FRAMEWORK_NAME": "{{openldap.name}}"
  }
}
