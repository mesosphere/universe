{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "version": { "type": "string" },
    "packages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
            "name": {
              "type": "string"
            },
            "currentVersion": {
              "type": "string"
            },
            "versions": {
              "type": "object",
              "description": "Maps software versions to their latest package.",
              "additionalProperties": { "type": "string" }
            },
            "description": {
              "type": "string"
            },
            "framework": {
              "type": "boolean",
              "default": false,
              "description": "True if this package installs a new Mesos framework."
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[^\\s]+$"
              }
            }
        },
        "required": [
          "name",
          "currentVersion",
          "versions",
          "description",
          "tags"
        ]
      }
    }
  },
  "required": [
    "version",
    "packages"
  ]
}

